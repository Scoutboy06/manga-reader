{
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "nodenext",
		"target": "ES2022",
		"sourceMap": true,
		"outDir": "./dist",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": ["./src/types"]
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"],
	"ts-node": {
		"esm": true
	}
}
