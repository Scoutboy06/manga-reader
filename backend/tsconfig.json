{
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"@/lib/*": ["./lib/*"],
			"@/models/*": ["./models/*"],
			"@/types/*": ["./types/*"],
			"@/api/*": ["./api/*"],
			"@/*": ["./*"]
		},
		"module": "esnext",
		"moduleResolution": "nodenext",
		"target": "ES2022",
		"sourceMap": true,
		"outDir": "./dist",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": ["./src/types"]
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"],
	"ts-node": {
		"esm": true
	}
}
