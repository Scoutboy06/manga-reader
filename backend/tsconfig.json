{
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "nodenext",
		"target": "ES2022",
		"sourceMap": true,
		"outDir": "./dist",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["./src/**/*"],
	"ts-node": {
		"esm": true
	}
}
